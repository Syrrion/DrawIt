<!-- Telephone Recap Modal -->
<div id="telephone-recap-modal" class="modal hidden">
    <div class="modal-content telephone-recap-content" style="display: block !important; padding: 0 !important; overflow: hidden !important;">
        <div id="telephone-recap-container" style="width: 100%; height: 100%; display: flex; flex-direction: row;">
            <!-- Content injected by JS -->
        </div>
        
        <!-- Global Close Button (Hidden by default, shown at end) -->
        <button class="close-btn hidden" style="position: absolute; top: 1rem; right: 1rem; z-index: 100; background: rgba(0,0,0,0.5); border-radius: 50%; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; color: white; border: 1px solid rgba(255,255,255,0.2);" onclick="document.getElementById('telephone-recap-modal').classList.add('hidden')">
            <i class="fas fa-times"></i>
        </button>
    </div>
</div>
