<div id="avatar-color-popover" class="color-popover hidden">
    <div class="color-grid" id="avatar-color-grid">
        <!-- Generated by JS -->
    </div>
    <div class="custom-color-picker">
        <div class="cp-saturation-area" id="avatar-cp-saturation-area">
            <div class="cp-saturation-cursor" id="avatar-cp-saturation-cursor"></div>
        </div>
        <div class="cp-hue-area" id="avatar-cp-hue-area">
            <div class="cp-hue-cursor" id="avatar-cp-hue-cursor"></div>
        </div>
        <div class="cp-controls">
            <div class="cp-preview-color" id="avatar-cp-preview-color"></div>
            <div class="cp-rgb-inputs">
                <div class="cp-input-group">
                    <label>R</label>
                    <input type="number" id="avatar-cp-r" min="0" max="255" value="0">
                </div>
                <div class="cp-input-group">
                    <label>G</label>
                    <input type="number" id="avatar-cp-g" min="0" max="255" value="0">
                </div>
                <div class="cp-input-group">
                    <label>B</label>
                    <input type="number" id="avatar-cp-b" min="0" max="255" value="0">
                </div>
            </div>
        </div>
    </div>
</div>